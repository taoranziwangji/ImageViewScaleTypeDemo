<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_square_veiwbig"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="方形图片和view，view比图片大"/>

            <TextView
                android:id="@+id/tv_square_veiwsmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="方形图片和view，view比图片小"/>

            <TextView
                android:id="@+id/tv_rectangle_veiwbig"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，方形view，view长宽都比图片大"/>

            <TextView
            android:id="@+id/tv_rectangle_veiwsmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="长方形图片，方形view，view长宽都比图片小"/>

            <TextView
                android:id="@+id/tv_rectangle_veiwmiddle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，方形view，view长宽介于图片中间"/>

            <TextView
                android:id="@+id/tv_rectangle_allnoruleviewshort"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，长方形view，view长宽都比图片小"/>

            <TextView
                android:id="@+id/tv_rectangle_allnoruleviewlong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，长方形view，view长宽都比图片长"/>

            <TextView
                android:id="@+id/tv_rectangle_allnoruleviewmiddle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，长方形view，view短边连图片长边但比图短，view长边连图短边但比图长"
                android:drawableLeft="@drawable/demo1"/>

            <TextView
                android:id="@+id/tv_rectangle_allnoruleviewmiddle2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="长方形图片，长方形view，view短边连图片短边但比图短，view长边连图长边但比图长"
                android:drawableLeft="@drawable/demo2"/>



            <TextView
                android:id="@+id/tv_squale_wrapcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:text="正方形图片，方形view，view为wrap_content"/>

            <TextView
                android:id="@+id/tv_rectangle_wrapcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="0dp"
                android:text="长方形图片，方形view，view为wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>